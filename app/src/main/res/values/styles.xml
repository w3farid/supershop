<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="cardViewStyle">@style/CardView</item>
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="base_title" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/base_text_color</item>
        <item name="android:textSize">22dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="base_label" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/base_text_color</item>
        <item name="android:textSize">16dp</item>
    </style>

    <style name="AppTheme.Button" parent="Widget.AppCompat.Button.Colored">
        <item name="android:background">@color/buttonBGColor</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>